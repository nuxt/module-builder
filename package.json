{
  "name": "@nuxt/module-builder",
  "version": "0.8.4",
  "repository": "nuxt/module-builder",
  "description": "Complete solution for building Nuxt modules",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "nuxt-build-module": "./dist/cli.mjs",
    "nuxt-module-build": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev:prepare": "pnpm -r dev:prepare",
    "example:build": "pnpm nuxt-module-build build ./example",
    "lint": "eslint .",
    "nuxt-module-build": "JITI_ESM_RESOLVE=1 jiti ./src/cli.ts",
    "prepack": "pnpm build",
    "release": "pnpm vitest run && pnpm build && changelogen --release && pnpm publish && git push --follow-tags",
    "test": "pnpm vitest",
    "test:types": "vue-tsc --noEmit && pnpm -r test:types"
  },
  "packageManager": "pnpm@9.12.2",
  "dependencies": {
    "citty": "^0.1.6",
    "consola": "^3.2.3",
    "defu": "^6.1.4",
    "magic-regexp": "^0.8.0",
    "mlly": "^1.7.2",
    "pathe": "^1.1.2",
    "pkg-types": "^1.2.1",
    "tsconfck": "^3.1.4",
    "unbuild": "^2.0.0"
  },
  "peerDependencies": {
    "@nuxt/kit": "^3.13.2",
    "nuxi": "^3.14.0"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^0.6.0",
    "@nuxt/kit": "^3.13.2",
    "@nuxt/schema": "^3.13.2",
    "@types/node": "^20.16.13",
    "@vitest/coverage-v8": "^2.1.3",
    "changelogen": "^0.5.7",
    "eslint": "^9.13.0",
    "jiti": "^2.3.3",
    "nuxi": "^3.14.0",
    "nuxt": "^3.13.2",
    "tinyexec": "^0.3.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "vue": "^3.5.12",
    "vue-tsc": "^2.1.6"
  },
  "resolutions": {
    "@nuxt/kit": "^3.13.2",
    "@nuxt/schema": "^3.13.2",
    "vue": "^3.5.12"
  }
}
