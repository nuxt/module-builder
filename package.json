{
  "name": "@nuxt/module-builder",
  "version": "0.2.0",
  "description": "Complete solution to build Nuxt Modules",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "nuxt-build-module": "./dist/cli.mjs",
    "nuxt-module-build": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "example:build": "yarn nuxt-module-build ./example",
    "lint": "eslint --ext .ts,.js,.mjs .",
    "nuxt-module-build": "jiti ./src/cli.ts",
    "prepack": "yarn build",
    "release": "yarn test && standard-version && git push --follow-tags && npm publish",
    "test": "yarn lint"
  },
  "dependencies": {
    "consola": "^2.15.3",
    "mlly": "^0.5.16",
    "mri": "^1.2.0",
    "pathe": "^0.3.9",
    "unbuild": "^0.9.4"
  },
  "devDependencies": {
    "@nuxt/kit": "^3.0.0-rc.12",
    "@nuxt/schema": "^3.0.0-rc.12",
    "@nuxtjs/eslint-config-typescript": "^11.0.0",
    "@types/mri": "^1.1.1",
    "@types/node": "^18.11.0",
    "eslint": "^8.26.0",
    "jiti": "^1.16.0",
    "standard-version": "^9.5.0"
  }
}
