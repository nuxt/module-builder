{
  "name": "@nuxt/module-builder",
  "version": "0.3.1",
  "repository": "nuxt/module-builder",
  "description": "Complete solution to build Nuxt Modules",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "nuxt-build-module": "./dist/cli.mjs",
    "nuxt-module-build": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "example:build": "pnpm nuxt-module-build ./example",
    "lint": "eslint --ext .ts,.js,.mjs .",
    "nuxt-module-build": "jiti ./src/cli.ts",
    "prepack": "pnpm build",
    "release": "pnpm test && standard-version && git push --follow-tags && npm publish",
    "test": "pnpm vitest"
  },
  "packageManager": "pnpm@8.5.1",
  "dependencies": {
    "consola": "^3.1.0",
    "mlly": "^1.2.1",
    "mri": "^1.2.0",
    "pathe": "^1.1.0",
    "unbuild": "^1.2.1"
  },
  "peerDependencies": {
    "@nuxt/kit": "^3.5.0",
    "nuxi": "^3.5.0"
  },
  "devDependencies": {
    "@nuxt/kit": "^3.5.0",
    "@nuxt/schema": "^3.5.0",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@types/mri": "^1.1.1",
    "@types/node": "^20.1.3",
    "@vitest/coverage-c8": "^0.31.0",
    "eslint": "^8.40.0",
    "jiti": "^1.18.2",
    "nuxi": "^3.5.0",
    "nuxt": "^3.5.0",
    "standard-version": "^9.5.0",
    "vitest": "^0.31.0"
  }
}
