{
  "name": "@nuxt/module-builder",
  "version": "0.8.4",
  "repository": "nuxt/module-builder",
  "description": "Complete solution for building Nuxt modules",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "nuxt-build-module": "./dist/cli.mjs",
    "nuxt-module-build": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev:prepare": "pnpm -r dev:prepare",
    "example:build": "pnpm nuxt-module-build build ./example",
    "lint": "eslint .",
    "nuxt-module-build": "JITI_ESM_RESOLVE=1 jiti ./src/cli.ts",
    "prepack": "pnpm build",
    "release": "pnpm vitest run && pnpm build && changelogen --release && pnpm publish && git push --follow-tags",
    "test": "pnpm vitest --coverage",
    "test:types": "vue-tsc --noEmit && pnpm -r test:types"
  },
  "packageManager": "pnpm@9.15.1",
  "dependencies": {
    "citty": "^0.1.6",
    "consola": "^3.3.1",
    "defu": "^6.1.4",
    "jiti": "^2.4.2",
    "magic-regexp": "^0.8.0",
    "mlly": "^1.7.3",
    "pathe": "^1.1.2",
    "pkg-types": "^1.2.1",
    "tsconfck": "^3.1.4",
    "unbuild": "^3.0.1"
  },
  "peerDependencies": {
    "nuxi": "^3.17.2"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^0.7.4",
    "@nuxt/schema": "^3.15.0",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "changelogen": "^0.5.7",
    "eslint": "^9.17.0",
    "nuxi": "^3.17.2",
    "nuxt": "^3.15.0",
    "tinyexec": "^0.3.1",
    "typescript": "~5.6.3",
    "vitest": "^2.1.8",
    "vue": "^3.5.13",
    "vue-tsc": "^2.1.10"
  },
  "resolutions": {
    "@nuxt/kit": "^3.15.0",
    "@nuxt/schema": "^3.15.0",
    "typescript": "~5.6.3",
    "vue": "^3.5.13"
  }
}
