{
  "name": "@nuxt/module-builder",
  "version": "0.4.0",
  "repository": "nuxt/module-builder",
  "description": "Complete solution to build Nuxt Modules",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "nuxt-build-module": "./dist/cli.mjs",
    "nuxt-module-build": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "example:build": "pnpm nuxt-module-build ./example",
    "lint": "eslint --ext .ts,.js,.mjs .",
    "nuxt-module-build": "JITI_ESM_RESOLVE=1 jiti ./src/cli.ts",
    "prepack": "pnpm build",
    "release": "pnpm test && standard-version && git push --follow-tags && npm publish",
    "test": "pnpm vitest"
  },
  "packageManager": "pnpm@8.7.0",
  "dependencies": {
    "consola": "^3.2.3",
    "mlly": "^1.4.1",
    "mri": "^1.2.0",
    "pathe": "^1.1.1",
    "unbuild": "^2.0.0"
  },
  "peerDependencies": {
    "@nuxt/kit": "^3.7.0",
    "nuxi": "^3.7.0"
  },
  "devDependencies": {
    "@nuxt/kit": "^3.7.0",
    "@nuxt/schema": "^3.7.0",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@types/mri": "^1.1.1",
    "@types/node": "^20.5.7",
    "@vitest/coverage-v8": "^0.34.3",
    "eslint": "^8.48.0",
    "jiti": "^1.19.3",
    "nuxi": "^3.7.2",
    "nuxt": "^3.7.0",
    "standard-version": "^9.5.0",
    "vitest": "^0.34.3"
  }
}
